# Required
OPENAI_API_KEY=

# arXiv search (supports multiple queries joined by ||)
# Simple/broad examples (pick one and set ARXIV_QUERY):
#   1) AIのみ（最も簡単）
#      ARXIV_QUERY=cat:cs.AI
#   2) AI + 機械学習 + 言語処理（広め）
#      ARXIV_QUERY=(cat:cs.AI OR cat:cs.LG OR cat:cs.CL)
#   3) キーワードを少し足す（ANDで絞り込み）
#      ARXIV_QUERY=(cat:cs.AI OR cat:cs.LG) AND (all:agent OR ti:agent OR abs:agent)
#   4) 複数クエリを || で分割
#      ARXIV_QUERY=cat:cs.AI || cat:cs.LG || cat:cs.CL
ARXIV_QUERY=cat:cs.AI
ARXIV_MAX=1
ARXIV_POOL_SIZE=200
ARXIV_RANDOM_MODE=daily # or true_random

# De-duplicate across history
DEDUP_HISTORY=true
# Only consider last N days for de-dup (0 = all time)
HISTORY_WINDOW_DAYS=0

# Site
SITE_BASE_URL=https://<your-github-pages-domain>

# Optional model overrides
OPENAI_LLM_MODEL=gpt-4o-mini
OPENAI_TTS_MODEL=gpt-4o-mini-tts
OPENAI_TTS_VOICE=alloy

# Podcast metadata (for Spotify/iTunes compatibility)
PODCAST_TITLE=ArxivCaster
PODCAST_DESCRIPTION=Daily summaries of arXiv papers with podcast audio.
PODCAST_AUTHOR=
# If empty, defaults to SITE_BASE_URL + /cover.png
PODCAST_IMAGE_URL=
PODCAST_OWNER_NAME=
PODCAST_OWNER_EMAIL=yutotakagi.for.business@gmail.com
PODCAST_CATEGORY=Technology
# Optional subcategory (e.g., Software How-To, Tech News)
PODCAST_SUBCATEGORY=
# Optional website URL for the show (channel <link>)
PODCAST_WEBSITE_URL=

# Qiita auto-posting
QIITA_PUBLISH=false
QIITA_ACCESS_TOKEN=
QIITA_TAGS=arxiv,podcast,ml
QIITA_PRIVATE=false
QIITA_TITLE_PREFIX=[ArxivCaster] 
