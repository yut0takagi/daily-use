# Required
OPENAI_API_KEY=

# arXiv search
ARXIV_QUERY=cat:cs.LG
ARXIV_MAX=1
ARXIV_POOL_SIZE=200
ARXIV_RANDOM_MODE=daily # or true_random

# Site
SITE_BASE_URL=https://<your-github-pages-domain>

# Optional model overrides
OPENAI_LLM_MODEL=gpt-4o-mini
OPENAI_TTS_MODEL=gpt-4o-mini-tts
OPENAI_TTS_VOICE=alloy

# Podcast metadata (for Spotify/iTunes compatibility)
PODCAST_TITLE=ArxivCaster
PODCAST_DESCRIPTION=Daily summaries of arXiv papers with podcast audio.
PODCAST_AUTHOR=
# If empty, defaults to SITE_BASE_URL + /cover.png
PODCAST_IMAGE_URL=

# Qiita auto-posting
QIITA_PUBLISH=false
QIITA_ACCESS_TOKEN=
QIITA_TAGS=arxiv,podcast,ml
QIITA_PRIVATE=false
QIITA_TITLE_PREFIX=[ArxivCaster] 
